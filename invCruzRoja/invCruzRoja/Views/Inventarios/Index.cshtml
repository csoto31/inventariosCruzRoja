@model IEnumerable<invCruzRoja.Models.INVENTARIO>

@{
    ViewBag.Title = "Index";
}

<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<!----<body style="background-image:url(../../fonts/fondo-principal.jpg); background-repeat: no-repeat; background-attachment: fixed">-->
<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
</body>

<h2>Inventarios</h2>
<hr /><br />
<input class="form-control" id="myInput" type="text" placeholder="Busqueda Rapida..">
<br />
@Html.ActionLink("Nuevo Item", "Create", "Controller", new { @class = "btn btn-primary" })
<br />
<br />

<table class="table table-bordered table-condensed table-hover " id="myTable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Marca)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Modelo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumSerie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaAsignado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaRetiro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoActivo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MACAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Propietario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PERSONAS.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TERRITORIOS.Comite)
        </th>
        <th>Editar</th>
        <th>Detalles</th>
        <th>Eliminar</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumSerie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaAsignado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaRetiro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoActivo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MACAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Propietario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PERSONAS.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TERRITORIOS.Comite)
            </td>
            <td class="text-center">
                @Html.ActionLink(" ", "Edit", new { id = item.IDInventario }, new { @class = "glyphicon glyphicon-pencil" })
            </td>
            <td class="text-center">
                @Html.ActionLink(" ", "Details", new { id = item.IDInventario }, new { @class = "glyphicon glyphicon-eye-open" })
            </td>
            <td class="text-center">
                @Html.ActionLink(" ", "Delete", new { id = item.IDInventario }, new { @class = "glyphicon glyphicon-trash" })
            </td>

        </tr>
    }

</table>